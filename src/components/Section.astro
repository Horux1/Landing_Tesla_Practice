---
const { color, title, subtitle } =Astro.props
const textColor = `text-${color}` 
---


<section
    class="Landing-section bg-black h-screen w-screen text-center overflow-hidden z-30 relative"
    data-header-color={color}
>
    <div class="z-30 relative h-full flex flex-col">
        <header>
            <h2 class={`${textColor} pt-40 text-[40px] font-medium z-10`}>
                {title}
            </h2>
            <p class={`${textColor} text-sm`}>
                {subtitle}
            </p>
        </header>

        <footer class="flex flex-col flex-grow justify-end pb-20">
         <slot name="footer" />
        </footer>
    </div>

    <div class="absolute top-0 bottom-0 h-full w-full z-10">
        <slot name="background"></slot>
        <video
            class="object-center object-cover h-full w-full"
            autoplay
            muted
            loop
            src="/Video.webm"></video>
    </div>
</section>
